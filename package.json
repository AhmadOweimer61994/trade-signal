{
  "name": "my-electron-vue",
  "private": true,
  "version": "0.0.0",
  "description": "Vue + Electron + Tailwind app",
  "author": "Khalid Abu Hawwas",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev:vite": "vite",
    "dev": "concurrently -k \"npm:dev:vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron ./electron/main.cjs\"",
    "build": "vite build",
    "start": "cross-env NODE_ENV=production electron ./electron/main.cjs",
    "pack": "electron-builder --dir",
    "dist": "vite build && electron-builder"
  },
 "build": {
  "appId": "com.example.myapp",
  "productName": "MyElectronApp",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "package.json"
  ],
  "win": {
    "target": "nsis"
  }
},
  "dependencies": {
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.13",
    "vite": "^7.1.2",
    "wait-on": "^7.2.0"
  }
}
